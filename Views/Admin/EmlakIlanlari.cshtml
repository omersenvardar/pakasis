@model List<DBGoreWebApp.Models.Entities.EmlakBahce>

<h3>Emlak İlanları</h3>
<div class="container">
    @foreach (var emlak in Model)
    {
        <div class="card mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5>@emlak.IlanAdi</h5>
                    <p><strong>Adres:</strong> @emlak.AdresKonumuNavigation?.Il, @emlak.AdresKonumuNavigation?.Ilce</p>
                    <p><strong>Fiyat:</strong> @emlak.FiyatSatis ₺</p>
                    <p><strong>Durum:</strong> @emlak.Durum</p>
                </div>
                <form method="post" action="/Admin/UpdateEmlakDurum">
                    <input type="hidden" name="Id" value="@emlak.Id" />
                    <select name="Durum" class="form-select">
                        <option value="Aktif">Aktif</option>
                        <option value="Pasif">Pasif</option>
                        <option value="Kaldirildi">Kaldırıldı</option>
                    </select>
                    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
                </form>
            </div>
        </div>
    }
</div>
