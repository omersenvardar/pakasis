<script>
    document.getElementById('FiyatDisplay').addEventListener('input', function (e) {
        // Rakam dışında tüm karakterleri çıkar
        let value = e.target.value.replace(/\D/g, '');

        // Sayıyı 3'er basamak ayırarak formatla
        let formattedValue = new Intl.NumberFormat('tr-TR').format(value);

        // Gösterim alanına formatlı değeri ekle
        e.target.value = formattedValue ? formattedValue + ' ₺' : '';

        // Gizli input alanına yalnızca sayı değerini ekle
        document.getElementById('Fiyat').value = value;
    });
</script>


