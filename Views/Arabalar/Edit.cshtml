@model DBGoreWebApp.Models.Entities.Araba

<h2>Araba Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Kullanıcı ID</label>
        <input asp-for="KullaniciId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Marka</label>
        <input asp-for="MarkaID" class="form-control" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input asp-for="ModelID" class="form-control" />
    </div>
    <div class="form-group">
        <label>Yıl</label>
        <input asp-for="YilID" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input asp-for="VersiyonID" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
