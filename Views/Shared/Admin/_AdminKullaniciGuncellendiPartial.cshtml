@{
    ViewBag.Title = "İlan Güncellendi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<style>
    .success-page {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom, #ffffff, #f0f8ff);
        color: #333;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .success-page .success-container {
        margin-top: 20px;
        padding: 40px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
        text-align: center;
    }

    .success-page .success-container h1 {
        font-size: 28px;
        font-weight: bold;
        color: #28a745;
    }

    .success-page .success-container p {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
    }

    .success-page .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        text-transform: uppercase;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .success-page .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .success-page .loader {
        border: 4px solid #f3f3f3;
        border-radius: 50%;
        border-top: 4px solid #007bff;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 20px auto;
    }

     @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>

<div class="success-page">
    <div class="success-container">
        <h1>Kullanıcı başarıyla güncellendi!</h1>
        <p>Admin sayfasına yönlendiriliyorsunuz...</p>
        <div class="loader"></div>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-primary mt-3">Hemen Git</a>
    </div>
</div>

<script>
    setTimeout(function () {
        window.location.href = '@Url.Action("Index", "Admin")';
    }, 2000); // 2 saniye sonra yönlendirme
</script>




