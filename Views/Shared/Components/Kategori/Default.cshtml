@model List<IGrouping<string, DBGoreWebApp.Models.Entities.Kategori>>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container-fluid">
        <ul class="navbar-nav mx-auto">

            <!-- Dinamik Kategori Yapısı -->
            @foreach (var kategoriGroup in Model)
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="@kategoriGroup.Key" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        @kategoriGroup.Key <!-- Ana kategori adı -->
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="@kategoriGroup.Key">
                        @foreach (var subKategori in kategoriGroup)
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="@subKategori.Controller"
                                    asp-action="@subKategori.Action"
                                    asp-route-kategoriad="@subKategori.KategoriAd"
                                    asp-route-altkategori="@subKategori.AltKategori">
                                    @subKategori.AltKategori <!-- Alt kategori adı -->
                                </a>
                            </li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
</nav>


