@model DBGoreWebApp.Models.ViewModels.PasswordChangeViewModel

<div class="password-change-form">
    <h4>Şifre Değiştir</h4>
    <form asp-action="UpdatePassword" asp-controller="Account" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="mb-3">
            <label for="CurrentPassword" class="form-label">Mevcut Şifre</label>
            <input type="password" asp-for="CurrentPassword" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="NewPassword" class="form-label">Yeni Şifre</label>
            <input type="password" asp-for="NewPassword" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="ConfirmNewPassword" class="form-label">Yeni Şifre Tekrar</label>
            <input type="password" asp-for="ConfirmNewPassword" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
    </form>
</div>

<style>
    .password-change-form {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .password-change-form h4 {
        margin-bottom: 20px;
    }
</style>
