@model DBGoreWebApp.Models.Entities.Kullanici

<div class="container">
    <div class="row">
        <div class="col-md-4 text-center">
            <!-- Profil Resmi -->
            <img src="@Model.ImgUrl" alt="Profil Resmi" class="img-fluid rounded-circle"
                style="width: 150px; height: 150px; object-fit: cover;">

            <!-- Profil Resmi Değiştir Butonu -->
            <div class="mt-3">
                <a class="btn btn-primary"
                    onclick="loadContent('/Kullanici/Profil/EditProfilResimi/@Model.Id', 'contentArea')">
                    Profil Resmini Değiştir
                </a>
            </div>
        </div>
    

    <div class="col-md-4">
        <!-- Kullanıcı Bilgileri -->
        <p><strong>Kullanıcı Adı:</strong> @Model.Ad</p>
        <p><strong>Soyadı:</strong> @Model.Soyad</p>
        <p><strong>Telefon:</strong> @Model.Telefon</p>
        <p><strong>E-posta:</strong> @Model.Email</p>



        <!-- Güncelle Butonu -->
        <div class="mt-3">
            <a class="btn btn-primary" onclick="loadContent('/Kullanici/Profil/EditKullanici/@Model.Id','contentArea')">
                Kullanıcı Bilgilerini Güncelle
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Ek Bilgiler -->
        <p><strong>Kayıt Tarihi:</strong> @Model.KayitTarihi.ToString("dd MMM yyyy")</p>
        <p><strong>Firma Ünvanı:</strong> @Model.FirmaUnvani</p>
        <p><strong>Referans:</strong> @Model.Referans</p>
        <p>
            <strong>Abonelik Tipi:</strong>
            @if (Model.AbonelikTipi == null || Model.AbonelikTipi == "yok")
            {
                <span class="text-uyari">Henüz bir aboneliğiniz yok.</span>
            }
            else
            {
                @Model.AbonelikTipi.ToString()
            }
        </p>
        <p>
            <strong>Abonelik Durumu:</strong>
            @if (Model.AbonelikStatusu == "aktif")
            {
                <span class="text-success">Üyeliğiniz aktif.</span>
            }
            else
            {
                <span class="text-uyari">Üyeliğiniz henüz aktif edilmedi.</span>
            }
        </p>
    </div>
</div>
</div>

<style>
    @* .container {
        margin-top: 20px;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    } *@

    h4 {
        margin-bottom: 20px;
    }

    .btn-primary,
    .btn-secondary {
        transition: background-color 0.3s, box-shadow 0.3s;
    }

    .btn-primary:hover,
    .btn-secondary:hover {
        background-color: #0056b3;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .text-uyari {
        color: #dc3545;
    }

    .text-success {
        color: #28a745;
    }
</style>
<script>
    function loadContent(url, targetElementId) {
        fetch(url)
            .then(response => response.text())
            .then(data => {
                document.getElementById(targetElementId).innerHTML = data;
            })
            .catch(error => console.error('Error loading content:', error));
    }

</script>