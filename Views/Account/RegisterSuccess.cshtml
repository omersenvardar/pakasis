@{
    Layout = null; // Bu sayfa kendi başına kullanılacak, ana layout'dan bağımsız
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Başarılı</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <script>
        setTimeout(function () {
            window.location.href = '/Home/Index'; // Ana sayfaya yönlendirme
        }, 3000); // 3 saniye sonra yönlendirme
    </script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to bottom, #ffffff, #d6e8f3);
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
        }

        .success-container {
            background-color: #f8f9fa;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 40px;
            max-width: 500px;
            width: 100%;
        }

        .success-container h1 {
            font-size: 28px;
            color: #28a745;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .success-container p {
            font-size: 16px;
            color: #555;
            margin-bottom: 30px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            text-transform: uppercase;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .loader {
            border: 4px solid #f3f3f3;
            border-radius: 50%;
            border-top: 4px solid #007bff;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <div class="success-container">
        <h1>
            @if (TempData["MessageRegister"] != null)
            {
                @TempData["MessageRegister"]
            }
            else
            {
                <text>Kayıt işleminiz başarılı!</text>
            }
        </h1>
        <p>3 saniye sonra ana sayfaya yönlendirileceksiniz...</p>
        <div class="loader"></div>
        <a href="/Home/Index" class="btn btn-primary">Ana Sayfaya Git</a>
    </div>
</body>
</html>
