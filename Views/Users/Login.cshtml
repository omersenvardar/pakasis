@model DBGoreWebApp.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap - DB Emlak";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <!-- Logo -->
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">DB <span class="text-secondary">Emlak</span></h1>
                <p class="text-muted">Lütfen giriş yapın</p>
            </div>

            <!-- Giriş Formu -->
            @if (string.IsNullOrEmpty(ViewBag.KullaniciAd))
            {
                <form asp-controller="Users" asp-action="Login" method="POST" >
                    <div class="mb-3">
                        <label for="phone" class="form-label">Telefon</label>
                        <input type="text" class="form-control" id="Telefon" name="Telefon" placeholder="05XX XXX XX XX" required>
                    </div> 
                    <div class="mb-3">
                        <label for="password" class="form-label">Şifre</label>
                        <input type="password" class="form-control" id="Sifre" name="Sifre" placeholder="Şifrenizi girin" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>

                    @if (ViewBag.LoginMessage != null)
                    {
                        <div class="mt-3 alert @(ViewBag.LoginMessage == "Giriş başarılı." ? "alert-success" : "alert-danger")">
                            @ViewBag.LoginMessage
                        </div>
                    }
                </form>
            }
            else
            {
                <div class="alert alert-success text-center">
                    Hoşgeldiniz, @ViewBag.KullaniciAd!
                </div>
            }

            <!-- Üye Ol ve Şifremi Unuttum -->
            <div class="text-center mt-3">
                <a asp-controller="Users" asp-action="Register" class="text-decoration-none">Üye Ol</a> |
                <a asp-controller="Users" asp-action="ForgotPassword" class="text-decoration-none">Şifremi Unuttum</a>
            </div>
        </div>
    </div>
</div>
