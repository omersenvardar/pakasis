
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <!-- Logo -->
            <div class="text-center mb-4">
                <h1 class="fw-bold text-primary">DB <span class="text-secondary">Emlak</span></h1>
                <p class="text-muted">Şifrenizi sıfırlamak için e-posta adresinizi girin</p>
            </div>
            
            <!-- Forgot Password Form -->
            <form method="post" action="/forgot-password">
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta Adresi</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="ornek@emlak.com" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Şifre Sıfırlama Bağlantısı Gönder</button>
            </form>

            <!-- Back to Login Link -->
            <div class="text-center mt-3">
                <a asp-controller="Users" asp-action="Login" class="text-decoration-none"><i class="fas fa-arrow-left"></i> Giriş Yap</a>
            </div>
        </div>
    </div>
</div>
